{
  "name": "xdm",
  "version": "2.1.0",
  "description": "an MDX compiler",
  "license": "MIT",
  "keywords": [
    "xdm",
    "mdx",
    "markdown",
    "jsx"
  ],
  "repository": "wooorm/xdm",
  "bugs": "https://github.com/wooorm/xdm/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "type": "module",
  "main": "index.js",
  "sideEffects": false,
  "types": "./index.d.ts",
  "files": [
    "lib/",
    "complex-types.d.ts",
    "registry.d.ts",
    "esbuild.js",
    "esbuild.d.ts",
    "esm-loader.js",
    "index.js",
    "index.d.ts",
    "register.cjs",
    "rollup.js",
    "rollup.d.ts",
    "webpack.cjs"
  ],
  "dependencies": {
    "@rollup/pluginutils": "^4.0.0",
    "@types/estree-jsx": "^0.0.1",
    "astring": "^1.6.0",
    "estree-util-build-jsx": "^2.0.0",
    "estree-util-is-identifier-name": "^2.0.0",
    "estree-walker": "^3.0.0",
    "got": "^11.0.0",
    "hast-util-to-estree": "^2.0.0",
    "loader-utils": "^2.0.0",
    "markdown-extensions": "^1.0.0",
    "mdast-util-mdx": "^1.0.0",
    "micromark-extension-mdxjs": "^1.0.0",
    "periscopic": "^3.0.0",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^9.0.0",
    "source-map": "^0.7.0",
    "unified": "^10.0.0",
    "unist-util-position-from-estree": "^1.0.0",
    "unist-util-stringify-position": "^3.0.0",
    "unist-util-visit": "^4.0.0",
    "vfile": "^5.0.0"
  },
  "optionalDependencies": {
    "deasync": "^0.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@emotion/react": "^11.0.0",
    "@mdx-js/react": "2.0.0-next.8",
    "@theme-ui/preset-base": "^0.11.0",
    "@types/babel__core": "^7.0.0",
    "@types/loader-utils": "^2.0.0",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/tape": "^4.0.0",
    "@types/webpack": "^5.0.0",
    "@vue/babel-plugin-jsx": "^1.0.0",
    "@vue/server-renderer": "^3.0.0",
    "c8": "^7.0.0",
    "esbuild": "^0.13.0",
    "eslint-plugin-es": "^4.0.0",
    "eslint-plugin-security": "^1.0.0",
    "estree-to-babel": "^3.0.0",
    "nanoid": "^3.0.0",
    "preact": "^10.0.0",
    "preact-render-to-string": "^5.0.0",
    "prettier": "^2.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rehype-katex": "^6.0.0",
    "rehype-raw": "^6.0.0",
    "remark-cli": "^10.0.0",
    "remark-footnotes": "^4.0.0",
    "remark-frontmatter": "^4.0.0",
    "remark-gfm": "^2.0.0",
    "remark-math": "^5.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.0.0",
    "tape": "^5.0.0",
    "theme-ui": "^0.11.0",
    "type-coverage": "^2.0.0",
    "typescript": "^4.0.0",
    "vue": "^3.0.0",
    "webpack": "^5.0.0",
    "xo": "^0.44.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "rimraf \"{lib/**/**,test/**/**,script/**}*.d.ts\" \"{esbuild,esm-loader,index,rollup}.d.ts\" && tsc && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --no-warnings --experimental-loader=./esm-loader.js test/index.js && node test/register.cjs",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov node --no-warnings --experimental-loader=./esm-loader.js test/index.js",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "envs": [
      "shared-node-browser"
    ],
    "extensions": [
      "cjs"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "complexity": "off",
      "max-depth": "off",
      "new-cap": "off"
    },
    "overrides": [
      {
        "files": [
          "lib/**/*.js"
        ],
        "extends": [
          "plugin:es/restrict-to-es2019",
          "plugin:security/recommended"
        ],
        "rules": {
          "security/detect-object-injection": "off"
        }
      },
      {
        "files": [
          "**/*.cjs"
        ],
        "rules": {
          "unicorn/prefer-module": "off"
        }
      },
      {
        "files": [
          "lib/run.js"
        ],
        "rules": {
          "no-new-func": "off"
        }
      },
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off"
        }
      },
      {
        "files": [
          "lib/integration/esbuild.js"
        ],
        "rules": {
          "eqeqeq": [
            "error",
            "always",
            {
              "null": "ignore"
            }
          ],
          "no-eq-null": "off",
          "security/detect-non-literal-fs-filename": "off"
        }
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true,
    "ignoreFiles": [
      "lib/util/resolve-evaluate-options.{d.ts,js}"
    ]
  }
}
